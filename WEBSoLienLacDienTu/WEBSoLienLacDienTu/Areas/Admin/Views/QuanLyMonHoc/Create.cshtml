@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <h2>Thêm Môn Học Mới</h2>
    <hr/>
    <div class="container">
        <form class="needs-validation" novalidate>
            <div class="form-group">
                <label for="TenMH">Nhập Tên Môn : </label>
                <input type="text" class="form-control" id="TenTk" placeholder="Nhập Tên Môn Học ..." name="TenMH" required>
                <div class="valid-feedback">Đã Nhập</div>
                <div class="invalid-feedback">Vui Lòng Điền Thông Tin !</div>
            </div>
            <div class="form-group">
                <label for="HeSo10">Hệ Số 10 :</label>
                @Html.DropDownList("HeSo10", new List<SelectListItem>
                {
                    new SelectListItem {Text = "Có", Value = "1"},
                    new SelectListItem {Text = "Không", Value = "0"},
                }, null, new {@class = "form-control"})
            </div>
            <button type="submit" class="btn btn-primary">Thêm</button>
        </form>
    </div>
    <hr />
    <script src="~/Areas/Admin/Scripts/QuanLyMonHoc.js"></script>

}