@model DTO.ThongBaoTruong
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <h2>Cập Nhật Thông Báo Trường</h2>
    <hr />
    <div class="container">

        <form>
            <div class="form-group">

                <label for="NoiDung">Nhập Nội Dung :</label>
                @Html.TextAreaFor(m => m.NoiDung, 10, 10, new { @class = "form-control" })
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(m => m.ID)
                @Html.HiddenFor(m => m.Ngay)
                @Html.HiddenFor(m => m.IDLoaiThongBao)
            </div>
            <button type="submit" class="btn btn-primary">Cập Nhật</button>
        </form>

    </div>
    <hr />
}

