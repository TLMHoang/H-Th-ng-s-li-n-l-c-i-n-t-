
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="title-page">
    <h2>Quản Lý Thông Báo Toàn Trường</h2>
</div>
<hr />
<div class="row">
    <div>
        <a href="@Url.Action("Create","ThongBaoChung")" class="btn btn-success btn-icon-split" style="margin-left: 20px">
            <span class="icon text-white-50">
                <i class="fas fa-plus-square"></i>
            </span>
            <span>Thêm Thông Báo</span>
        </a>
        <button class="btn btn-danger"  style="margin-left: 10px" onclick="window.location.href='/Admin/HomeAdmin'" ><i class="fas fa-sign-out-alt"></i></button>
    </div>
</div>

<hr />
<div class="container-fluid">
    <!-- Page Heading -->
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <form>
                <div class="input-group mb-3">
                    <h6 class="m-0 font-weight-bold text-primary">Danh Sách Thông Báo</h6>

                </div>
            </form>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Sửa</th>
                            <th>Xóa</th>
                            <th>STT</th>
                            <th>Nội Dung</th>
                            <th>Ngày</th>
                        </tr>
                    </thead>

                    <tbody id="myTable">
                        @foreach (var item in Model as IEnumerable<DTO.ThongBaoTruong>)
                        {
                            <tr>
                                <td width="10px">
                                    <div>
                                        <a href="@Url.Action("Update","ThongBaoChung",new {@id=item.ID})" class="btn btn-primary btn-icon-split">
                                            <span class="icon">
                                                <i class="fas fa-pen-square"></i>
                                            </span>
                                            <span>Sửa</span>
                                        </a>
                                    </div>
                                </td>
                                <td width="10px">
                                    <div>
                                        <a href="#" class="btn btn-danger btn-icon-split" onclick="Delete(@item.ID);">
                                            <span class="icon">
                                                <i class="fas fa-trash"></i>
                                            </span>
                                            <span>Xóa</span>
                                        </a>
                                    </div>
                                </td>
                                <td>@Html.DisplayFor(modelitem=>item.ID)</td>
                                <td>@Html.DisplayFor(modelitem => item.NoiDung)</td>
                                <td>@item.Ngay.ToString("dd/MM/yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<script src="~/Areas/Admin/Scripts/ThongBaoChung.js"></script>