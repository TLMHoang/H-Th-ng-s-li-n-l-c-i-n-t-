                <input id="text10" type="text" size="50"/>
            </div>
                    
            <label for="text11">Tiền tài liệu</label>
            <div class="input-group mb-3">
                <input id="text11" type="text" size="50"/>
            </div>
            <input id="Submit1" type="submit" value="Thêm vào danh sách" />                                                          
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <form>
                <div class="input-group mb-3">
                    <h6 class="m-0 font-weight-bold text-primary">Danh Sách Học Sinh</h6>

                </div>
            </form>
        </div>
        <div class="card-body">
            <input class="form-control" id="myInput" type="text" placeholder="Tìm Kiếm Học Sinh">
            <br>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="80%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên Học Sinh</th>
                            <th>Tháng</th>
                            <th>Lớp</th>
                            <th>Số ngày học</th>
                            <th>Tiền học phí</th>
                            <th>Tiền ăn</th>
                            <th>Tiền điện</th>
                            <th>Tiền nước</th>
                            <th>Tiền vệ sinh</th>
                            <th>Tiền trang thiết bị</th>
                            <th>Tiền tài liệu</th>
                            <th>Tổng học phí</th>
                        </tr>
                    </thead>
                    <tbody id="myTable">
                    </tbody>
                </table>
                
            </div>
        </div>
    </div>

</div>
