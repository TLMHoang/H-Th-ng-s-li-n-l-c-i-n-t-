<div class="container-fluid">
    <!-- Page Heading -->
    <!-- DataTales Example -->
    
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <form>
                <div class="input-group mb-3">
                    <h6 class="m-0 font-weight-bold text-primary">Danh Sách Tài Liệu</h6>

                </div>
            </form>
        </div>
        <div class="card-body">
            <input class="form-control" id="myInput" type="text" placeholder="Tìm Kiếm Tài Liệu">
            <br>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã Tài Liệu</th>
                            <th>Tên Tài Liệu</th>
                            <th>Ngày Tạo</th>
                        </tr>
                    </thead>

                    <tbody id="myTable">
                        @foreach (var item in Model)
                        {
                            <tr onclick="location.href='@Url.Action("QuizDetails","HeThongTaiLieu_GV",new { @idTopic = item.ID })'">
                                <td width="15%">
                                    @item.ID
                                </td>
                                <td>
                                    @item.NameTopic
                                </td>
                                <td>
                                    @item.CreateAt
                                </td>
                               
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

</script>