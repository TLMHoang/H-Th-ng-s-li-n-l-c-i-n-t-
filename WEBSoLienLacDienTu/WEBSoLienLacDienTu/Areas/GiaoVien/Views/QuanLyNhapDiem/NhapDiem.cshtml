
@{
    ViewBag.Title = "NhapDiem";
    Layout = "~/Areas/GiaoVien/Views/Shared/_LayoutGiaoVien.cshtml";
}

<div class="title-page">Nhập Điểm</div>

<div class="box">
    <div class="row">
        <div style="margin-left: 10px">
            <a href="@Url.Action("DanhSachDiem")" class="btn btn-success btn-icon-split" style="margin: 2px 10px" id="Excel">
                <span class="icon text-white-50">
                    <i class="fas fa-clipboard-list"></i>
                </span>
                <span>Xem Danh Sách Điểm</span>
            </a>
        </div>
        <button class="btn btn-danger" style="margin-left: 10px" id="ExitButton"><i class="fas fa-sign-out-alt"></i></button>
    </div>
    <hr style="margin: 12px 0;"/>
    <div class="panel" style="margin-top: 20px">
        <table>
            <tbody>
            <tr>
                <th>Học Kỳ</th>
                <td>
                    <div class="select">
                        <select>
                            <option value="1">Học Kỳ 1</option>
                            <option value="0">Học Kỳ 2</option>
                        </select>
                    </div>
                </td>
            </tr>
            <tr>
                <th>Loại Điểm</th>
                <td>
                    <div class="select">
                        <select>
                            <option value="1">15p</option>
                            <option value="2">1t</option>
                        </select>
                    </div>
                </td>
            </tr>
                <tr>
                    <th>Lần</th>
                    <td>
                        <div class="select">
                            <select>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                            </select>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

    



