                            </div>
                        }
                    </div>
                    <div class="col" style="padding: 0; width: auto; text-align: center;">
                        <div style="font-weight: bold;">Thứ 4</div>
                        @foreach (var item in ViewBag.LstT4)
                        {
                            <div>
                                @item
                            </div>
                        }
                    </div>
                    <div class="col" style="padding: 0; width: auto; text-align: center;">
                        <div style="font-weight: bold;">Thứ 5</div>
                        @foreach (var item in ViewBag.LstT5)
                        {
                            <div>
