                            </div>
                        }
                    </div>
                    <div class="col" style="padding: 0; width: auto; text-align: center;">
                        <div style="font-weight: bold;">Thứ 6</div>
                        @foreach (var item in ViewBag.LstT6)
                        {
                            <div>
                                @item
                            </div>
                        }
                    </div>
