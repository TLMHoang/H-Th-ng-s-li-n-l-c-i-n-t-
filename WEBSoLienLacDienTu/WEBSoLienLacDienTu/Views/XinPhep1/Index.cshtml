
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="title-page"><h2>Danh Sách </h2></div>
<div class="container-fluid">
    <!-- Page Heading -->
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" cellspacing="0">
                    <thead style="background-color: darkorange; color: white;">
                        <tr>
                            <th>Nghỉ Từ</th>
                            <th>Nghỉ Đến</th>
                            <th>Trạng Thái</th>
                            @*<th>Kiểm Duyệt</th>*@
                            <th>Lý do</th>

                        </tr>
                    </thead>

                    <tbody id="myTable">
                        @foreach (var item in Model as IEnumerable<DTO.XinPhep>)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelitem => item.NghiTu)
                            </td>

                            <td>
                                @Html.DisplayFor(modelitem => item.NghiDen)
                            </td>
                            <td>
                                @if (item.TrangThai == 0)
                                {
                                    @Html.Label("Đang Chờ")
                                }
                                else
                                {
                                    @Html.Label("Đã Duyệt")
                                }
                            </td>
                            @*<td>
                                @if (item.ChoHuy == 0)
                                {
                                    @Html.Label("Không Cho Nghỉ")
                                }
                                else
                                {
                                    @Html.Label("Cho Phép Nghỉ")
                                }
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelitem => item.LyDo)
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

