
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thông tin học sinh</h2>
<div class="container-fluid">
    <div>
        <p class="font-weight-bold " style="text-align: center; background-color: darkorange; color: white;">Con Em</p>
    </div>
    <div class="row">

        @foreach (var item in Model as IEnumerable<WEBSoLienLacDienTu.Models.LKPHvsHS>)
        {
            <div class="col-6 col-md-3 col-lg-3 col-xl-3" style="padding: 10px;width:12rem;">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@*Mã Học Sinh : @Html.DisplayFor(m => item.IDHocSinh)*@</h5>
                        <p class="card-text">Tên Học Sinh :@Html.DisplayFor(m => item.Ten)</p>
                        <a href="@Url.Action("Edit","ThongTinHocSinh1",new {@id = item.ID})" class="btn btn-primary" style="width: 100%">Xem</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>


